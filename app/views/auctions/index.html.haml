.row.row-offcanvas.row-offcanvas-right
  .col-xs-12.col-sm-3.sidebar-offcanvas
    .list-group
      - @categories.each do |category|
        = link_to(category.name, category_auctions_path(category_id: category.id), class: "list-group-item #{'active' if category == @active_category}")
  .col-xs-12.col-sm-9
    - if @auctions.empty?
      .well.well-lg.text-center Auctions list is empty
    - else
      = render(@auctions)

    - if user_signed_in?
      = link_to('New auction', new_auction_path, class: 'btn btn-primary navbar-btn pull-right right-10')
    .clearfix
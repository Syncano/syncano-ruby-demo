= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'std_form' }) do |f|
  %h2 Sign up
  = f.email_field :email, autofocus: true, placeholder: 'e-mail', required: true, class: 'form-control'
  %p.text-danger= resource.errors[:email].first if resource.errors[:email].present?

  = f.password_field :password, autocomplete: 'off', placeholder: 'password', required: true, class: 'form-control'
  %p.text-danger= resource.errors[:password].first if resource.errors[:password].present?

  = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'password confirmation', required: true, class: 'form-control'
  %p.text-danger= resource.errors[:password_confirmation].first if resource.errors[:password_confirmation].present?

  = f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block'

  .top-10
    = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)

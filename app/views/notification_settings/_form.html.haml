= form_for(notification_setting, html: { class: 'std_form' }) do |f|
  = f.label :category_id
  = f.collection_select :category_id, Category.all, :id, :name, include_blank: true, class: 'form-control'
  %p.text-danger= notification_setting.errors[:category_id].first if notification_setting.errors[:category_id].present?

  = f.label :min_price
  = f.text_field :min_price, class: 'form-control'
  %p.text-danger= notification_setting.errors[:min_price].first if notification_setting.errors[:min_price].present?

  = f.label :max_price
  = f.text_field :max_price, class: 'form-control'
  %p.text-danger= notification_setting.errors[:max_price].first if notification_setting.errors[:max_price].present?

  = f.submit notification_setting.new_record? ? 'Create' : 'Update', class: 'btn btn-lg btn-primary pull-right'
  = link_to(notification_settings_path, class: 'pull-right cancel-link') do
    %span.glyphicon.glyphicon-chevron-right
    cancel
.clearfix